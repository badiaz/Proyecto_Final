    <script>
      function procesarSegmentsB(res, res2) {
        var tempseg = res.segment.split("—");
        var seg = [];
        var risk = res.risk;
        var temp = risk.split("—");
        var risk = res.risk;
        var temp = risk.split("—");
        var color;
        for (var i = 0; i < tempseg.length; i++) {
          risk = parseFloat(temp[i]);
          var tempseg2 = JSON.parse(tempseg[i]);
          var tempseg3 = [
            { lat: tempseg2.lat, lng: tempseg2.lng },
            { lat: tempseg2.lat1, lng: tempseg2.lng1 },
          ];

          if (risk > 70 && risk <= 100) {
            
            color = "#ff0000";
          } else if (risk > 30 && risk <= 70) {
            color = "#f6d866";
          } else {
            color = "#008000";
          }
          
          drawSegmentB(tempseg3, color, res2[i]);
        }
        
      }

      

      function drawSegmentB(seg, color, res2) {
        var route = new google.maps.Polyline({
          path: seg,
          geodesic: true,
          strokeColor: "#000000",
          strokeWeight: 8,
          strokeOpacity: 1,
          map: null,
        });
        var path = route.getPath();
        placeIdArray = [];
        runSnapToSegmentB(path, color, res2);
