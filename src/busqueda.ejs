    <script>
      //////SNAP TO ROAD FUNCTIONS //////
      //Ajusta la ruta creada por el usuario a los caminos más apropiados
      function runSnapToRoadB(path) {
        var pathValues = [];
        for (var i = 0; i < path.getLength(); i++) {
          pathValues.push(path.getAt(i).toUrlValue());
        }

        $.get(
          "https://roads.googleapis.com/v1/snapToRoads",
          {
            interpolate: true,
            key: apiKey,
            path: pathValues.join("|"),
          },
          function (data) {
            processSnapToRoadResponseB(data);
            drawSnappedPolylineB();
          }
        );
      }

      //Ajusta el segmento de ruta definido por el usuario a los caminos más apropiados
      function runSnapToSegmentB(path, color, res2) {
        var pathValues = [];
        for (var i = 0; i < path.getLength(); i++) {
          pathValues.push(path.getAt(i).toUrlValue());
        }

        $.get(
          "https://roads.googleapis.com/v1/snapToRoads",
          {
            interpolate: true,
            key: apiKey,
            path: pathValues.join("|"),
          },
          function (data) {
            processSnapToRoadResponseB(data);
            drawSnappedSegmentB(color, res2);
          }
        );
      }

      // Procesa la respuesta de la función anterior (runSnapToRoadB)
      function processSnapToRoadResponseB(data) {
        snappedCoordinates = [];
        placeIdArray = [];
        for (var i = 0; i < data.snappedPoints.length; i++) {
          var latlng = new google.maps.LatLng(
            data.snappedPoints[i].location.latitude,
            data.snappedPoints[i].location.longitude
          );
          snappedCoordinates.push(latlng);
          placeIdArray.push(data.snappedPoints[i].placeId);
        }
      }

      // Dibuja la polylinea ajustada al camino (después de procesar la respuesta)
      function drawSnappedPolylineB() {
        
        if (polylinesB.length > 0) {
          polylinesB[length - 1].setMap(null);
        }
        var snappedPolyline = new google.maps.Polyline({
          path: snappedCoordinates,
          geodesic: true,
          strokeColor: "#0f2547",
          strokeOpacity: 1.0,
          strokeWeight: 5,
          zIndex: 998,
        });
        snappedPolyline.setMap(mapB);

        polylinesB[0] = snappedPolyline;
      }

      function drawSnappedSegmentB(color, result) {
        var snappedPolyline = new google.maps.Polyline({
          path: snappedCoordinates,
          geodesic: true,
          strokeColor: color,
          strokeOpacity: 1.0,
          strokeWeight: 5,
          zIndex: 1000,
        });
        var descriptor;
        var rut = result.fecharutaB.split("T");
        var fecharutaB = rut[0];
        if (result.riesgo <= 30) {
          descriptor = "Low";
          color = "#008000";
          icon = "http://maps.google.com/mapfiles/ms/icons/green.png";
        } else if (result.riesgo > 30 && result.riesgo <= 70) {
          descriptor = "Moderate";
          color = "#f6d866";
          icon = "http://maps.google.com/mapfiles/ms/icons/orange.png";
        } else if (result.riesgo > 70 && result.riesgo <= 100) {
          color = "#ff0000";
          descriptor = "High";
          icon = "http://maps.google.com/mapfiles/ms/icons/red.png";
        }
        snappedPolyline.addListener("mouseover", () => {
          /*  document.getElementById("id").innerHTML = result.id; */
          document.getElementById("fecharutaB").innerHTML = fecharutaB;
          document.getElementById("InitcoordB").innerHTML =
            result.latitud + ", " + result.longitud;
          document.getElementById("FinalcoordB").innerHTML =
            result.latitud1 + ", " + result.longitud1;
          document.getElementById("riesgoB").innerHTML =
            descriptor + " (" + result.riesgo.toFixed(2) + "%)";
          document.getElementById("notasbB").innerHTML = result.notas;
        });
        snappedPolyline.setMap(mapB);
        SnappedSegmentsB.push(snappedPolyline);
        
      }

      function zoomToObject(obj) {
        var bounds = new google.maps.LatLngBounds();
        var points = obj.getPath().getArray();
        for (var n = 0; n < points.length; n++) {
          bounds.extend(points[n]);
        }
        mapB.fitBounds(bounds);
      }
