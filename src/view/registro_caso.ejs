  <script async defer
    src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyBZFxENpr18VouKnGzRAxHJX4aOGoAXJpY&callback=initMap"></script>
    <script>  
      //Obtener fecha de hoy
  
      let today = new Date();
      let dd = today.getDate();
      let mm = today.getMonth() + 1; //enero es 0!
      let yyyy = today.getFullYear();
      
      if (dd < 10) {
        dd = "0" + dd;
      }
      if (mm < 10) {
        mm = "0" + mm;
      }
      
      today = yyyy + "-" + mm + "-" + dd ;
  
      //Inicialziar el calendario con la fecha de hoy
      document.getElementById("fechanac").value = today;
      document.getElementById("fechanac").max = today;
      document.getElementById("fechaex").value = today;
      document.getElementById("fechaex").max = today;
      
      </script>
