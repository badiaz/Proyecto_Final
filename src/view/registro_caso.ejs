      <!-- Page Content -->
      <div id="content" class="bg-grey w-100">
        <section class="bg-fondo py-3">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-9 col-md-8">
                <h1 class="font-weight-bold mb-0">Bienvenido Ayudante</h1>
                <p class="lead text-muted">A continuación, podrás registrar los casos de COVID-19 en nuestro sistema</p>
              </div>
              <div class="col-lg-3 col-md-4 d-flex">
                <!-- <button class="btn btn-primary w-100 align-self-center">Descargar reporte de hoy</button> -->
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="container">
            <div class="row">
              <div class="col-lg-12 my-4">
                <div class="card rounded-0">
                  <div class="card-header bg-light">
                    <h5 class="d-inline-block font-weight-bold mb-0">Registro de casos</h5>
                  </div>
                  <div class="card-body">
                    <div class="container">
                      <form id="formCase" action="/logeado_ayudante" method="post">
                        <div class="row">
                          <div class="col-lg-6 my-4">
                            <div class="form-group mb-4">
                              <label for="nombre" class="font-weight-bold">Nombre</label>
                              <input class="form-control bg-grey" id="nombre" name="nombre"
                                placeholder="Ingrese su nombre" autocomplete="off">
                            </div>
                            <div class="form-group mb-4">
                              <label for="apellido" class="font-weight-bold">Apellido</label>
                              <input class="form-control bg-grey" id="apellido" name="apellido"
                                placeholder="Ingrese su apellido" autocomplete="off">
                            </div>
                            <div class="form-group mb-4">
                              <label for="cedula" class="font-weight-bold">Cedula</label>
                              <input class="form-control bg-grey" id="cedula" name="cedula"
                                placeholder="Ingrese su cedula" autocomplete="off">
                            </div>
                            <div class="form-group mb-0">
                              <label for="sexo" class="font-weight-bold">Sexo:</label>
                            </div>
                            <div class="form-group mb-4">
                              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-primary active">
                                  <input type="radio" name="sexo" id="masculino" value="1" checked> Masculino
                                </label>
                                <label class="btn btn-primary">
                                  <input type="radio" name="sexo" id="femenino" value="2"> Femenino
                                </label>
                              </div>
                            </div>
                            <div class="form-group mb-4">
                              <label for="fecha_nac" class="font-weight-bold">Fecha de nacimiento</label>
                              <input type="date" class="form-control w-10" id="fechanac"
                                                name="fechanac" onkeydown="return false" />
                            </div>
                          </div>
                          <div class="col-lg-6 my-4">
                            <div class="form-group mb-4">
                              <label for="apellido" class="font-weight-bold">Dirección de residencia</label>
                              <input class="form-control bg-grey" id="direc" name="direc"
                                placeholder="Ingrese su dirección de residencia" autocomplete="off">
                            </div>
                            <div class="form-group mb-4">
                              <label for="apellido" class="font-weight-bold">Dirección de trabajo</label>
                              <input class="form-control bg-grey" id="dirt" name="dirt"
                                placeholder="Ingrese su dirección de trabajo" autocomplete="off">
                            </div>
                            <div class="form-group mb-0">
                              <label for="exampleInputEmail1" class="font-weight-bold">Resultado del examen:</label>
                            </div>
                            <div class="form-group mb-4">
                              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-primary active">
                                  <input type="radio" name="resultado" id="negativo" value="2" checked> Positivo
                                </label>
                                <label class="btn btn-primary">
                                  <input type="radio" name="resultado" id="positivo" value="0"> Negativo
                                </label>
                              </div>
                            </div>
                            <div class="form-group mb-4">
                              <label for="fecha_examen" class="font-weight-bold">Fecha del examen</label>
                              <input type="date" class="form-control w-10" id="fechaex"
                                                name="fechaex" onkeydown="return false" />
                            </div>
                          </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-4 mb-4 w-25">Registrar caso</button>
                        <button type="button" onclick=limpiarform(); class="btn btn-primary mt-4 mb-4 w-25">Limpiar</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
  <script> 
  function limpiarform(){
  document.forms['formCase'].reset()
  }
  </script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
