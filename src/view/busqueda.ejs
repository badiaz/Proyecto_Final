  <script>
    //initMap();
    var map;
    var geocoder;

    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12, center: { lat: 10.9861045, lng: -74.80928094 },
        streetViewControl: false
      });
      geocoder = new google.maps.Geocoder();
    }

    async function search() {

      if (document.getElementById('inputSearch').value != "") {
        initMap();
        var input = document.getElementById('inputSearch').value;
        const consulta = { con: input };
        const options1 = {
          method: "POST",
          body: JSON.stringify(consulta),
          headers: {
            "Content-Type": "application/json"
          }
        };

        const response1 = await fetch('/mapaplan', options1);
        result = await response1.json();
        console.log(result);

        if (result.cedula > 0) {
          console.log('papi entre a len')
          //Simplify addresses
          var nac = result.fechanac.split("T")
          var examen = result.fechaex.split("T")
          var fechanac = nac[0];
          var fechaex = examen[0];
          console.log(fechaex)
          document.getElementById("id").innerHTML = result.id;
          document.getElementById("nombre").innerHTML = result.nombre + " " + result.apellido;
          document.getElementById("cedula").innerHTML = result.cedula;
          if (result.sexo == 1) { document.getElementById("sexo").innerHTML = 'Masculino'; }
          else { document.getElementById("sexo").innerHTML = 'Femenino'; }
          document.getElementById("fechanac").innerHTML = fechanac;
          document.getElementById("direc").innerHTML = result.direc;
          document.getElementById("dirt").innerHTML = result.dirt;
          if (result.resultado == 0) { result.resultado = 'Negativo'; estado = 'Sano'; }
          else if (result.resultado == 1) { result.resultado = 'Negativo'; estado = 'Curado'; }
          else if (result.resultado == 2) { result.resultado = 'Positivo'; estado = 'Tratamiento en casa'; }
          else if (result.resultado == 3) { result.resultado = 'Positivo'; estado = 'Tratamiento en hospital'; }
          else if (result.resultado == 4) { result.resultado = 'Positivo'; estado = 'UCI'; }
          else if (result.resultado == 5) { result.resultado = '-'; estado = 'Fallecido'; }
          document.getElementById("resultado").innerHTML = estado;
          document.getElementById("fechaex").innerHTML = fechaex;

          var address = result.direc + ' barranquilla';
          var address1 = result.dirt + ' barranquilla';

          geocoder.geocode({ 'address': address }, function (results1, status) {
            if (status == google.maps.GeocoderStatus.OK) {
              map.setCenter(results1[0].geometry.location);
              var marker = new google.maps.Marker({
                map: map,
                icon: "https://i.postimg.cc/Y2JH3F7f/jeringagreen.png",
                animation: google.maps.Animation.DROP,
                position: results1[0].geometry.location
              });
            } else {
              alert('Geocode was not successful for the following reason: ' + status);
            }
          });

          geocoder.geocode({ 'address': address1 }, function (results2, status) {
            if (status == google.maps.GeocoderStatus.OK) {
              map.setCenter(results2[0].geometry.location);
              var marker = new google.maps.Marker({
                map: map,
                icon: "https://i.postimg.cc/ry91G1x7/jeringared.png",
                animation: google.maps.Animation.DROP,
                position: results2[0].geometry.location
              });
            } else {
              alert('Geocode was not successful for the following reason: ' + status);
            }
          });

          var id = result.id;
          const consulta2 = { con: id };
          const options2 = {
            method: "POST",
            body: JSON.stringify(consulta2),
            headers: {
              "Content-Type": "application/json"
            }
          };

          const response2 = await fetch('/tabla', options2);
          result1 = await response2.json();
          for (i = 0; i < result1.length; i++) {
            if (result1[i].estado == 0) { result1[i].estado = 'Sano'; }
            else if (result1[i].estado == 1) { result1[i].estado = 'Curado'; }
            else if (result1[i].estado == 2) { result1[i].estado = 'Tratamiento en casa'; }
            else if (result1[i].estado == 3) { result1[i].estado = 'Tratamiento en hospital'; }
            else if (result1[i].estado == 4) { result1[i].estado = 'UCI'; }
            else if (result1[i].estado == 5) { result1[i].estado = 'Fallecido'; }

            console.log(result1[i].estado)
          }
          
          var table = document.getElementById('table');
          table.innerHTML = "";
          result1.forEach(function (object) {
            var tr = document.createElement('tr');
            var fecha1 = object.fecha.split("T")
            var fecha2 = fecha1[0];
            tr.innerHTML = '<th>' + fecha2 + '</th>' + '<td>' + object.estado + '</td>';
            table.appendChild(tr);
          });

        } else {
          swal({
            title: "ERROR!",
            text: "No hay registros del caso ingresado",
            icon: "warning",
          });
        }
      } else {
        swal({
          title: "ERROR!",
          text: "Se debe ingresar la cédula del paciente o el ID del caso ",
          icon: "warning",
        });
      }
    }

  </script>
